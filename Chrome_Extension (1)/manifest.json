{
  "manifest_version": 3,
  "name": "NEXTBOT Time Tracker",
  "version": "1.0",
  "description": "Tracks time spent on websites",
  "permissions": ["tabs", "activeTab", "storage", "identity"],
  "host_permissions": ["https://your-nextjs-app.vercel.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "blacklogo.png"
  }
}
